# Aliases
alias zshconfig="micro ~/.zshrc"
alias bashconfig="micro ~/.bashrc"

alias cs="zsh ~/bin/cht.sh"
alias vim="nvim"
alias vimconfig="vim ~/.config/lvim/config.lua"

#copy file content to system clipboard
alias copyfile="xclip -sel clip"
#alias copypath="pwd | xclip -sel clip"

#LS - EXA aliases
alias ls="exa --group-directories-first --icons"
alias la="exa -a --group-directories-first --icons"
alias ll="exa -lhmH --group-directories-first --icons"
alias llt="exa -lhmH --tree --level=2 --group-directories-first --icons"
alias lla="ls -alhmH --group-directories-first --icons"
# sort by time modified fromt the newest
alias llm="exa -lhm --group-directories-first --icons -s=modified -r"
# sort by size from the biggest
alias lls="exa -lhm --group-directories-first --icons -s=size -r"
# weather in cli
alias weather="curl https://wttr.in/Kosice"

# buku bookmarks aliases
alias bukus="buku --deep"
alias bukut="buku -t"
alias baktobuku="cat /media/tomas/LILS/macOs_dotfiles_GIT/buku_c/.local/share/buku/bookmarks.db > ~/.local/share/buku/bookmarks.db"
alias bukutobak="cat ~/.local/share/buku/bookmarks.db > /media/tomas/LILS/macOs_dotfiles_GIT/buku_c/.local/share/buku/bookmarks.db"
